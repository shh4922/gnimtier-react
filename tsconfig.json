{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],

  /* 파일 import 시, 기본경로를 src로 잡기위한 설정*/
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@pages/*": ["src/pages/*"],
    },
    "composite": false,
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true 
  },
  "include": ["src"]
}
